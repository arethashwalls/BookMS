{% extends "layouts/main.njk" %}

{% set pageTitle = "Your Desk" %}
{% set styles = ["desk", "header"]%}
{% set hasHeader = true %}

{% block body %}
    <div class="columns">
        <div class="column">
            {% include "partials/deskDrawer.html" %}
        </div>
        <div class="column">
            <div class="container">
                <div class="container has-text-centered">
                    <h1 class="title">Welcome to your desk,
                        {{username}}.</h1>
                </div>
                <hr/>
                <section class="section desk-body">
                    <h3 class="title is-size-4 has-text-primary">{{deskPageName}}</h3>
                    {% block deskBody %}{% endblock %}
                </section>
            </div>
        </div>
    </div>

{% endblock %}