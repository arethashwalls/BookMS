<h1 class="title">Create a new author.</h1>

<form action="/admin/new/book" method="post">
    <div class="field">
        <label class="label">Title</label>
        <div class="control">
            <input class="input" type="text" name="title" placeholder="Singles and Singularities">
        </div>
    </div>
    {% if authors %}
        <div class="field">
            <label class="label">Authors</label>
            <div class="control">
                {% for author in authors %}
                    <label class="checkbox">
                        <input type="checkbox" value="{{author._id}}" name="authors"> {{author.name}}
                    </label>
                    <br />
                {% endfor %}
            </div>
        </div>
    {% endif %}
    <div class="field">
        <label class="label">Cover Image</label>
        <div class="control">
            <input class="input" type="text" name="cover" placeholder="fakeimagehostingwebsite.com/images/singlesandsingularitycover.png">
        </div>
        <p class="help">Enter a link to your cover image.</p>
    </div>
    <div class="field">
        <label class="label">Synopsis</label>
        <div class="control">
            <textarea class="textarea" name="synopsis" placeholder="Stella was a naive young T Tauri from GN-z11. The Omni Corporation was just looking for a cheap source of energy..."></textarea>
        </div>
        <p class="help">A short summary of your book.</p>
    </div>
    <div class="field">
        <div class="control is-clearfix">
            <button class="button is-pulled-right is-primary">Submit</button>
        </div>
    </div>
</form>