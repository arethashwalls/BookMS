{% extends "layouts/desk.njk" %}

{% set deskPageName = "Your Authors" %}

{% block deskBody %}
    {% for author in authors %}
        <div class="box">
            <article class="level">
                <h5 class="title">{{author.name}}</h5>
                {% if author.bio %}
                    <p>{{author.bio}}</p>
                {% endif %}
            </article>
        </div>
    {% endfor %}
    <div class="box has-background-dark">
        <article class="level">
            <a href="/admin/new/author">
                <h5 class="title is-inline-flex has-text-white">
                    Create a new author
                    <span class="icon"><i class="fas fa-plus-circle"></i></span>
                </h5>
            </a>
        </article>
    </div>
{% endblock %}