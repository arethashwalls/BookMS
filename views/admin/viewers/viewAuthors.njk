{% extends "layouts/desk.njk" %}

{% set deskPageName = "Your Authors" %}

{% block deskBody %}
    {% for author in authors %}
        <div class="box">
            <article class="level">
                <h5 class="title">{{author.name}}</h5>
                {% if author.bio %}
                    <p>{{author.bio}}</p>
                {% endif %}
            </article>
        </div>
    {% endfor %}
    <div class="box has-background-dark">
        <article class="level">
            <h5 class="title is-inline-flex has-text-white">Create a new author</h5>
            <a class="icon">
                <i class="fas fa-plus-circle"></i>
            </a>
        </article>
    </div>
    <div class="modal{% if isActive %} is-active{% endif %}">
        <div class="modal-background"></div>
        <div class="modal-content">
            {% include "../editors/editAuthors.njk" %}
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>
{% endblock %}