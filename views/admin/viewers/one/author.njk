{% extends "layouts/desk.njk" %}
{% from "partials/editFieldForm.njk" import editFieldForm %}

{% set deskPageName = author.name %}

{% block deskBody %}
    <div class="level" id="viewbox" data-type="author">
        <div class="level-left">
            <div class="level-item">
                <h3 class="title is-size-3 has-text-primary">{{author.name}}</h3>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
                <a href="/admin/authors/all">
                    <button class="button is-primary">
                        <i class="fas fa-angle-double-left"></i>&nbsp;&nbsp;&nbsp;&nbsp;Back to all authors.
                    </button>
                </a>
            </div>
        </div>
    </div>
    <div class="box">
        <div class="columns">
            <div class="column is-5">
                <h5 class="title is-6">Name:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-author-name">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </h5>
                <p id="show-author-name">{{author.name}}</p>
                {{editFieldForm('author', 'name', author.alias)}}
                <hr/>
                <h5 class="title is-6">Alias:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-author-alias">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </h5>
                <p id="show-author-alias">{{author.alias}}</p>
                {{editFieldForm('author', 'alias', author.alias)}}
            </div>
            <div class="column is-7">
                <h5 class="title is-6">Author Bio:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-author-bio">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </h5>
                <p id="show-author-bio">{{author.bio}}</p>
                {{editFieldForm('author', 'bio', author.bio, true)}}
            </div>
        </div>
    </div>
{% endblock %}