{% extends "layouts/desk.njk" %}
{% from "partials/editFieldForm.njk" import editFieldForm %}

{% set script = "edit" %}
{% set deskPageName = page.p_title %}

{% block deskBody %}
    <div class="level" id="viewbox" data-type="bookPage">
        <div class="level-left">
            <div class="level-item">
                <h3 class="title is-size-3 has-text-primary">{{page.p_title}}</h3>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
                <a href="/admin/books/{{book.alias}}/pages/all">
                    <button class="button is-primary">
                        <i class="fas fa-angle-double-left"></i>&nbsp;&nbsp;&nbsp;&nbsp;Back to all pages.
                    </button>
                </a>
            </div>
        </div>
    </div>
    <div class="box">
        <div class="columns">
            <div class="column is-5">
                <h5 class="title is-6">Title:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-bookPage-p_title" data-num="{{num}}">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </h5>
                <p id="show-bookPage-p_title">{{page.p_title}}</p>
                {{editFieldForm('bookPage', 'p_title', book.alias)}}
            </div>
            <div class="column is-7">
                <h5 class="title is-6">Page Content:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-bookPage-p_content">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </h5>
                <p id="show-bookPage-p_content">{{page.p_content}}</p>
                {{editFieldForm('bookPage', 'p_content', book.alias, true)}}
            </div>
        </div>
    </div>
{% endblock %}