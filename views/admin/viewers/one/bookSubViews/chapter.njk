{% extends "layouts/desk.njk" %}
{% from "partials/editFieldForm.njk" import editFieldForm %}

{% set script = "edit" %}
{% set deskPageName = chapter.ch_title %}

{% block deskBody %}
    <div class="level" id="viewbox" data-type="chapter">
        <div class="level-left">
            <div class="level-item">
                <h3 class="title is-size-3 has-text-primary">{{chapter.ch_title}}</h3>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
                <a href="/admin/books/{{book.alias}}/chapters/all">
                    <button class="button is-primary">
                        <i class="fas fa-angle-double-left"></i>&nbsp;&nbsp;&nbsp;&nbsp;Back to all chapters.
                    </button>
                </a>
            </div>
        </div>
    </div>
    <div class="box">
        <div class="columns">
            <div class="column is-5">
                <h5 class="title is-6">Title:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-chapter-ch_title" data-chnum="{{ch_num}}">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </h5>
                <p id="show-chapter-ch_title">{{chapter.ch_title}}</p>
                {{editFieldForm('chapter', 'ch_title', book.alias)}}
            </div>
            <div class="column is-7">
                <h5 class="title is-6">Chapter Pages:&nbsp;&nbsp;&nbsp;&nbsp;
                </h5>
                <ol>
                    {% for page in pages %}
                        <li>
                            <a>{{page.p_title}}</p>
                        </li>
                    {% endfor %}
                </ol>
            </div>
        </div>
    </div>
{% endblock %}