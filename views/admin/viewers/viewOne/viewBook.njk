{% extends "layouts/desk.njk" %}

{% set deskPageName = book.title %}

{% block deskBody %}
    <h3 class="title is-size-3 has-text-primary">{{book.title}}</h3>
    <h4 class="subtitle is-size-5">{{authorstring}}</h4>

    <div class="box">
        <div class="tabs">
            <ul>
                <li class="is-active">
                    <a>About</a>
                </li>
                <li>
                    <a>Chapters</a>
                </li>
                <li>
                    <a>Standalone Pages</a>
                </li>
            </ul>
        </div>
        <section class="columns">
            <div class="column is-5">
                <h5 class="title is-6">Title:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt"></i></h5>
                <p>"{{book.title}}"</p>
                <hr />
                <h5 class="title is-6">Alias:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt"></i></h5>
                <p>{{book.alias}}</p>
                <hr />
                <h5 class="title is-6">Authors:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt"></i></h5>
                <ul>
                    {% for author in book.authors %}
                        <li>
                            <a href="">{{author.name}}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="column is-7">
                <h5 class="title is-6">Cover Image:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt"></i></h5>
                <p>{{book.cover}}</p>
                <hr />
                <h5 class="title is-6">Synopsis:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt"></i></h5>
                <p>{{book.synopsis}}</p>
            </div>
        </section>
    </div>
{% endblock %}