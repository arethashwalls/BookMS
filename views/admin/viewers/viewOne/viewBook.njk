{% extends "layouts/desk.njk" %}

{% set deskPageName = book.title %}

{% block deskBody %}
    <h3 class="title is-size-4 has-text-primary">{{book.title}}</h3>
    <h4 class="title is-size-2">{{authorstring}}</h4>

    <div class="box">
        <div class="tabs">
            <ul>
                <li class="is-active">
                    <a>About</a>
                </li>
                <li>
                    <a>Chapters</a>
                </li>
                <li>
                    <a>Standalone Pages</a>
                </li>
            </ul>
        </div>
        <section class="section">
            <div class="container">
                <h5 class="title is-2">Authors:</h5>
                <ul>
                    {% for author in book.authors %}
                        
                    {% endfor %}
                </ul>
            </div>
        </section>
    </div>
{% endblock %}