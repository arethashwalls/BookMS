{% extends "layouts/desk.njk" %}

{% set deskPageName = book.title %}

{% block deskBody %}
    <div class="level">
        <div class="level-left">
            <div class="level-item">
                <h3 class="title is-size-3 has-text-primary">{{book.title}}</h3>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
                <a href="/admin/view/all/books"><button class="button is-primary">
                    <i class="fas fa-angle-double-left"></i>&nbsp;&nbsp;&nbsp;&nbsp;Back to all books.
                </button></a>
            </div>
        </div>
    </div>
    <div class="box">
        <div class="tabs">
            <ul>
                <li class="is-active">
                    <a>About</a>
                </li>
                <li>
                    <a>Chapters</a>
                </li>
                <li>
                    <a>Standalone Pages</a>
                </li>
            </ul>
        </div>
        <section class="columns">
            <div class="column is-5">
                <h5 class="title is-6">Title:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-book-title"><i class="fas fa-pen-alt"></i></a>
                </h5>
                <p id="show-book-title">"{{book.title}}"</p>
                <form class="hidden" id="edit-book-title" data-alias="{{book.alias}}">
                    <div class="field has-addons">
                        <div class="control is-expanded">
                            <input class="input" type="text" placeholder="New book title." name="title" id="new-book-title">
                        </div>
                        <div class="control">
                            <button class="button is-primary" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
                <hr />
                <h5 class="title is-6">Alias:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt" id="edit-book-alias"></i></h5>
                <p id="show-book-alias">{{book.alias}}</p>
                <hr />
                <h5 class="title is-6">Authors:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt" id="edit-book-authors"></i></h5>
                <ul id="show-book-authors">
                    {% for author in book.authors %}
                        <li>
                            <a href="/admin/view/author/{{author.alias}}">{{author.name}}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="column is-7">
                <h5 class="title is-6">Cover Image:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt"></i></h5>
                <p><a href="{{book.cover}}" target="_blank">{{book.cover}}</a></p>
                <hr />
                <h5 class="title is-6">Synopsis:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt"></i></h5>
                <p>{{book.synopsis}}</p>
            </div>
        </section>
    </div>
{% endblock %}