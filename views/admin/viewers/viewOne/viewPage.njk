{% extends "layouts/desk.njk" %}
{% from "partials/editFieldForm.njk" import editFieldForm %}

{% set deskPageName = page.p_title %}

{% block deskBody %}
    <div class="level" id="viewbox" data-type="page">
        <div class="level-left">
            <div class="level-item">
                <h3 class="title is-size-3 has-text-primary">
                    {{page.p_title}}</h3>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
                <a href="/admin/view/all/pages">
                    <button class="button is-primary">
                        <i class="fas fa-angle-double-left"></i>&nbsp;&nbsp;&nbsp;&nbsp;Back to all standalone pages.
                    </button>
                </a>
            </div>
        </div>
    </div>
    <div class="box">
        <div class="columns">
            <div class="column is-5">
                <h5 class="title is-6">Title:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-page-title">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </h5>
                <p id="show-page-title">{{page.p_title}}</p>
                {{editFieldForm('page', 'title', page.alias)}}
                <hr/>
                <h5 class="title is-6">Alias:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-page-alias">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </h5>
                <p id="show-page-alias">{{page.alias}}</p>
                {{editFieldForm('page', 'alias', page.alias)}}
            </div>
            <div class="column is-7">
                <h5 class="title is-6">Page Content:&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="toggle-edit-page-content">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </h5>
                <p id="show-page-content">{{page.p_content}}</p>
                {{editFieldForm('page', 'content', page.alias, true)}}
            </div>
        </div>
    </div>
{% endblock %}