{% extends "layouts/desk.njk" %}

{% set deskPageName = author.name %}

{% block deskBody %}
    <div class="level">
        <div class="level-left">
            <div class="level-item">
                <h3 class="title is-size-3 has-text-primary">{{author.name}}</h3>
            </div>
        </div>
        <div class="level-right">
            <div class="level-item">
                <a href="/admin/view/all/authors"><button class="button is-primary">
                    <i class="fas fa-angle-double-left"></i>&nbsp;&nbsp;&nbsp;&nbsp;Back to all authors.
                </button></a>
            </div>
        </div>
    </div>
    <div class="box">
        <h5 class="title is-6">Author bio:&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-pen-alt"></i></h5>
        <p>{{author.bio}}</p>
    </div>
{% endblock %}