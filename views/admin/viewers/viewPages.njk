{% extends "layouts/desk.njk" %}

{% set deskPageName = "Your Unassigned Pages" %}

{% block deskBody %}
    <div class="tile is-ancestor">
        <div class="tile is-parent">
            {% for book in books %}
                <div class="box">
                    <h4>{{book.title}}</h4>
                    {% for page in book.stdalone_pages %}
                        <article class="tile is-child is-4">
                            <div class="box">
                                <h5 class="title">{{page.p_title}}</h5>
                                <p class="subtitle">{{page.p_authors}}</p>
                                <hr/>
                                <p>{{page.p_content}}</p>
                            </div>
                        </article>
                    {% endfor %}
                    <article class="tile is-child is-4">
                        <div class="box has-background-dark">
                            <h5 class="title is-inline-flex has-text-white">Create a new page</h5>
                            <a class="icon">
                                <i class="fas fa-plus-circle"></i>
                            </a>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}