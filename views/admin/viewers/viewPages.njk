{% extends "layouts/desk.njk" %}

{% set deskPageName = "Your Standalone Pages" %}

{% block deskBody %}

    {% for book in books %}
        <div class="tile is-ancestor">
            <div class="tile is-12 is-parent">
                <div class="box">
                    <h4 class="title">{{book.title}}</h4>
                    {% for page in book.stdalone_pages %}
                        <article class="tile is-child is-4">
                            <div class="box">
                                <h5 class="title">{{page.p_title}}</h5>
                                <p class="subtitle">{{page.p_authors}}</p>
                                <hr/>
                                <p>{{page.p_content}}</p>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
    <article class="tile is-child is-4">
        <div class="box has-background-dark">
            <h5 class="title is-inline-flex has-text-white">Create a new standalone page</h5>
            <a class="icon">
                <i class="fas fa-plus-circle"></i>
            </a>
        </div>
    </article>

{% endblock %}