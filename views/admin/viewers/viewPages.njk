{% extends "layouts/desk.njk" %}

{% set deskPageName = "Your Standalone Pages" %}

{% block deskBody %}
    <div class="tile is-ancestor">
        <div class="tile is-12 is-parent">
            {% for page in stdalonePages %}
                <div class="box">
                    <article class="tile is-child is-4">
                        <div class="box">
                            <h5 class="title">{{page.p_title}}</h5>
                            <p class="subtitle">{{page.p_authors}}</p>
                            <hr/>
                            <p>{{page.p_content}}</p>
                        </div>
                    </article>
                </div>
            {% endfor %}
            <article class="tile is-child is-4">
                <div class="box has-background-dark">
                    <a href="/admin/new/page">
                        <h5 class="title is-inline-flex has-text-white">
                            Create a new standalone page
                            <span class="icon">
                                <i class="fas fa-plus-circle"></i>
                            </span>
                        </h5>
                    </a>
                </div>
            </article>
        </div>
    </div>
{% endblock %}