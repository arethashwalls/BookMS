{% extends "layouts/desk.njk" %}

{% set deskPageName="Your Books" %}

{% block deskBody %}
    <div class="tile is-ancestor">
        <div class="tile is-parent">
            {% for book in books %}
                <article class="tile is-child is-4">
                    <div class="box">
                        <h5 class="title">{{book.title}}</h5>
                        <p class="subtitle">{{book.authors}}</p>
                        {% if book.cover %}
                            <img src="{{book.cover}}" />
                        {% endif %}
                    </div>
                </article>
            {% endfor %}
        </div>
    </div>
{% endblock %}