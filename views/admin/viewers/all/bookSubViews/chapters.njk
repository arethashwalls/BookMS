{% extends "layouts/viewBookBase.njk" %}

{% set activeTab = "chapters" %}

{% block viewBookContent %}
    <div class="section is-clearfix">
        <ol>
            {% for chapter in book.chapters%}
                <li>
                    <h5 class="title is-6">
                        <a href="/admin/books/{{book.alias}}/chapters/{{loop.index}}">{{chapter.ch_title}}</a>
                    </h5>
                </li>
            {% endfor %}
        </ol>
        <a href="/admin/books/{{book.alias}}/chapters/new" class="button is-dark is-pulled-right">
            <span class="has-text-white">
                <i class="fas fa-plus-circle"></i>
            </span>&nbsp;&nbsp;&nbsp;&nbsp;Create a new chapter.
        </a>
    </div>
{% endblock %}